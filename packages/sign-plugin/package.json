{
  "name": "@grafana/sign-plugin",
  "version": "3.0.8",
  "repository": {
    "directory": "packages/sign-plugin",
    "url": "https://github.com/grafana/plugin-tools"
  },
  "author": "Grafana",
  "license": "Apache-2.0",
  "bin": "./dist/bin/run.js",
  "type": "module",
  "exports": {
    "node": {
      "import": "./index.js"
    },
    "default": "./index.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsup",
    "dev": "tsup --watch ./src --watch '../../libs'",
    "lint": "eslint --cache ./src",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "find-up": "^7.0.0",
    "minimist": "^1.2.2",
    "proxy-agent": "6.5.0"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*"
    ],
    "ext": "*",
    "events": {
      "start": "cls || clear"
    }
  },
  "engines": {
    "node": ">=20"
  }
}

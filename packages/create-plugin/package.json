{
  "name": "@grafana/create-plugin",
  "version": "5.18.2",
  "repository": {
    "directory": "packages/create-plugin",
    "url": "https://github.com/grafana/plugin-tools"
  },
  "author": "Grafana",
  "license": "Apache-2.0",
  "bin": "./dist/bin/run.js",
  "type": "module",
  "exports": {
    "node": {
      "import": "./index.js"
    },
    "default": "./index.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true
  },
  "scripts": {
    "clean": "rm -rf ./dist ./generated",
    "clean-generated": "find ./generated -not -path \"./generated/node_modules*\" -not -path \"./generated\" -not -path \"./generated/package-lock.json\" -maxdepth 1 -print0 | xargs -0  -I {} rm -rf {}",
    "build": "npm run clean && tsc && chmod +x ./dist/bin/run.js",
    "dev": "nodemon --exec 'tsc'",
    "lint": "eslint --cache ./src",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "boxen": "^8.0.0",
    "chalk": "^5.3.0",
    "change-case": "^5.4.0",
    "debug": "^4.3.4",
    "enquirer": "^2.4.1",
    "find-up": "^7.0.0",
    "glob": "^11.0.0",
    "handlebars": "^4.7.8",
    "marked": "^15.0.0",
    "marked-terminal": "^7.2.0",
    "minimist": "^1.2.8",
    "semver": "^7.3.5",
    "title-case": "^4.3.0",
    "which": "^5.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/marked-terminal": "^6.1.1",
    "@types/minimist": "^1.2.5",
    "@types/semver": "^7.5.8",
    "@types/tmp": "^0.2.6",
    "@types/which": "^3.0.4",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "tmp": "^0.2.3"
  },
  "overrides": {
    "@types/marked-terminal": {
      "marked": "^15.0.0"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*",
      "templates/**/*"
    ],
    "ext": "*",
    "events": {
      "start": "cls || clear"
    },
    "env": {
      "CREATE_PLUGIN_DEV": true
    }
  },
  "engines": {
    "node": ">=20"
  }
}

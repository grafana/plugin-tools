{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Standalone debug mode",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/pkg",
      "env": {},
      "args": [
        "-standalone"
      ]
    },
    {
      "name": "Attach to plugin backend in docker",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "port": 2345,
      "host": "127.0.0.1",
      "showLog": true,
      "trace": "log",
      "logOutput": "rpc",
      "substitutePath": [
        {
          "from": "${workspaceFolder}",
          "to": "/root/{{ pluginId }}"
        }
      ]
    }
  ]
}

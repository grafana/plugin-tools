{
  "$schema": "https://raw.githubusercontent.com/grafana/grafana/main/docs/sources/developers/plugins/plugin.schema.json",
  "type": "app",
  "name": "{{ titleCase pluginName }}",
  "id": "{{ pluginId }}",{{#if hasBackend}}
  "backend": true,
  "executable": "gpx_{{ snakeCase pluginName }}",{{/if}}
  "info": {
    "keywords": [
      "app"
    ],
    "description": "{{ sentenceCase pluginDescription }}",
    "author": {
      "name": "{{ sentenceCase orgName }}"
    },
    "logos": {
      "small": "img/logo.svg",
      "large": "img/logo.svg"
    },
    "screenshots": [],
    "version": "%VERSION%",
    "updated": "%TODAY%"
  },
  "includes": [
    {
      "type": "page",
      "name": "Home",
      "path": "/a/%PLUGIN_ID%/home",
      "role": "Admin",
      "addToNav": true,
      "defaultNav": true
    },
    {
      "type": "page",
      "name": "Page with tabs",
      "path": "/a/%PLUGIN_ID%/page-with-tabs",
      "role": "Admin",
      "addToNav": true,
      "defaultNav": false
    },
    {
      "type": "page",
      "name": "Page with drilldown",
      "path": "/a/%PLUGIN_ID%/page-with-drilldown",
      "role": "Admin",
      "addToNav": true,
      "defaultNav": false
    },
    {
      "type": "page",
      "name": "Hello world",
      "path": "/a/%PLUGIN_ID%/hello-world",
      "role": "Admin",
      "addToNav": true,
      "defaultNav": false
    }
  ],
  "dependencies": {
    "grafanaDependency": ">={{ grafanaVersion }}",
    "plugins": []
  }
}
